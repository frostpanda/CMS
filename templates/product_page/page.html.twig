<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
        <!-- Meta, title, CSS, favicons, etc. -->
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <title>Test product</title>


    </head>

    <body>  
        <a href="{{ path('index') }}"> Start page </a><br/><br/>
        <a href="{{ path('basket') }}"> Basket </a> <br/><br/>

        <h3>{{product.name}}</h3>
        {{ form_start(form) }}
        <br/>
        <div>
            <table>
                <thead>
                <th>Product name</th>
                <th>Old price</th>
                <th>Current price</th>
                <th>Quantity</th>
                </thead>
                <tbody>
                    <tr>
                        <td>{{product.name}}</td>
                        <td>{{product.oldPrice}}</td>
                        <td>{{product.price}}</td>
                        <td> 
                            {{ form_widget(form.quantity) }}   
                        </td>
                        <td>{{ form_widget(form.submit) }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
        {{ form_end(form) }}
        <br/>
        <div>
            <div id="product-slider">
                <h4>Slider</h4>
                {% for image in productSlider %} 
                    <img style="width: 25%; display:block" alt="{{ product.name }}" src="{{ asset('/images/products') }}/{{ image.name }}">
                {% endfor %}
            </div>
            <div id="product-description">
                <h4>Description</h4>
                {{ product.description|raw }}
            </div>
            <div id="product-gallery">
                <h4>Gallery</h4>
                {% for image in productGallery %} 
                    <img style="width: 25%; display:block" alt="{{ product.name }}" src="{{ asset('/images/products') }}/{{ image.name }}">
                {% endfor %}
            </div>
        </div>
    </body>
</html>
