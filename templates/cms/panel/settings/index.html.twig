{% extends 'cms/panel/skeleton.html.twig' %}

{% block page %}
         <!-- page content -->
        <div class="right_col" role="main">
          <div class="">
            <div class="row">
              <div class="col-lg-7 col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                  <div class="x_title">
                    <h4>Change password</h4>
                    <div class="clearfix"></div>
                  </div>                  
                  <div class="x_content">
{% for label, messages in app.flashes(['danger', 'success']) %}
    {% for message in messages %}
                    <div class="alert alert-{{ label }} text-center alert-dismissible form-message" role="alert">
                      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        {{ message }}
                    </div>  
    {% endfor %}
{% endfor %}
                   {{ form_start(form, {'attr' : {'class' : 'form-horizontal form-label-left'}}) }}
                      <div class="item form-group">
                        <label class="control-label col-lg-4  col-md-4 col-sm-4 col-xs-12" for="name"> {{ form_label(form.currentPassword) }} <span class="required">*</span>
                        </label>
                        <div class="col-lg-6 col-md-5 col-sm-6 col-xs-12">
                          {{ form_widget(form.currentPassword, {'attr' : {'class' : 'form-control col-md-7 col-xs-12'}}) }}
                        </div>
                      </div>
                      <div class="item form-group">
                        <label class="control-label col-lg-4  col-md-4 col-sm-4 col-xs-12" for="email">{{ form_label(form.newPassword) }} <span class="required">*</span>
                        </label>
                        <div class="col-lg-6 col-md-5 col-sm-6 col-xs-12">
                          {{ form_widget(form.newPassword, {'attr' : {'class' : 'form-control col-md-7 col-xs-12'}}) }}
                        </div>
                      </div>
                      <div class="item form-group">
                        <label class="control-label col-lg-4 ol-md-4 col-sm-4 col-xs-12" for="email">{{ form_label(form.confirmPassword) }} <span class="required">*</span>
                        </label>
                        <div class="col-lg-6 col-md-5 col-sm-6 col-xs-12">
                          {{ form_widget(form.confirmPassword, {'attr' : {'class' : 'form-control col-md-7 col-xs-12'}}) }}
                        </div>
                      </div>
                      <div class="ln_solid"></div>
                      <div class="form-group">
                        <div class="col-xs-12 text-center">
                          {{ form_widget(form.save, {'attr' : {'class' : 'btn btn-success'}}) }}
                        </div>
                      </div>
                    {{ form_end(form) }}
                    <!--</form>-->
                  </div>
                </div>
              </div>

              <div class="col-lg-5 col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                  <div class="x_title">
                    <h4>Login history</h4>
                    <div class="clearfix"></div>
                  </div>
                  <div class="x_content">
                    <div class="table-responsive login-history">
                      <table class="table rtable-center table-striped jambo_table">
                        <thead>
                          <tr class="headings">
                            <th class="column-title">IP Address</th>
                            <th class="column-title">Logged</th>
                            <th class="column-title">Date</th>
                          </tr>
                        </thead>
                        <tbody>
                          {% for history in loginHistory %}
                              <tr>
                                <td>{{ history.ip_address }}</td>
                                <td>

                                    {% if history.logged == 1 %}
                                    <i class="fa fa-check-circle"></i>
                                    {% else %}
                                    <i class="fa fa-times-circle"></i>
                                    {% endif %}
                                </td>
                                <td>{{ history.created|date('Y-m-d H:i:s') }}</td>
                              </tr>
                          {% endfor %}
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- /page content -->
{% endblock %}

{% block javascript %}

{% endblock %}
