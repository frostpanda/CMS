{% block form_errors %}
    {% if errors|length > 0 %}
        {% if compound %}
            <div class="alert alert-danger text-center alert-dismissible form-message" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                {% for error in errors %}
                        {{ error.message }}<br/>
                    {% endfor %}
            </div>
        {% else %}
        <div class="col-lg-offset-3 col-sm-offset-4 col-lg-6 col-md-5 col-sm-6 col-xs-12">
            <div class="form-control error"> {{ errors.0.message }} </div>
        </div>       
        {% endif %}
    {% endif %}
{% endblock form_errors %}